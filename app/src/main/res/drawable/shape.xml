<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >

    <shape
        >
        <stroke
            android:width="1dp"
            android:color="#505050"/>
        <corners
            android:radius="7dp" />

        <padding
            android:left="1dp"
            android:right="1dp"
            android:top="1dp"
            android:bottom="1dp"/>

        <solid android:color="#E1142F"/>

    </shape>
</item>
<item>
    <shape>
        <gradient
            android:startColor="#fa7402"
            android:endColor="#E16914"
            android:angle="270" />
        <stroke
            android:width="1dp"
            android:color="#505050" />
        <corners
            android:radius="7dp" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </shape>
</item>
</selector>