<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.krashunt.krashunt2.profileactivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relLayoutTopBar"
        android:layout_alignParentTop="true">


        <android.support.v7.widget.Toolbar
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_grey_border_bottom"

            >
          <ImageButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_back"

              android:background="#fff"
              android:onClick="backprofile"

              />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:background="@drawable/shape3"


                android:layout_gravity="right"

                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"



                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imagecoin"

                    android:background="@drawable/krashcoin"
                    android:layout_marginRight="4dp"

                    android:layout_alignParentLeft="true"

                    android:layout_centerVertical="true"




                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:id="@+id/coins"



                    android:layout_toRightOf="@+id/imagecoin"






                    android:text="0"
                    />


            </RelativeLayout>





        </android.support.v7.widget.Toolbar>





    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >

    <FrameLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFF"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        >


        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"

            android:clickable="true"

            android:src="@drawable/userprofilepng"/>





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT"
            android:id="@+id/edit"
            android:textStyle="bold"

            android:textColor="#000"

            android:clickable="true"
            android:layout_gravity="center"
            android:layout_marginTop="65dp"
            android:visibility="invisible"


            />






        <ImageView
            android:id="@+id/android"

            android:layout_gravity="center_horizontal"

            android:layout_width="160dp"
            android:layout_height="160dp"

            android:src="@drawable/subtracted_circle"
            android:contentDescription="@null" />




    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:id="@+id/nameview"
        android:layout_below="@+id/relative"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"

        android:padding="4dp"

        android:layout_marginTop="16dp"
        android:layout_marginLeft="2dp"/>

    <Button

        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nameview"
        android:id="@+id/contact"
        android:layout_marginTop="16dp"
        android:paddingTop="12dp"
        android:text="Contact Us"
        android:textSize="16dp"
        android:textAllCaps="false"

        android:textColor="#000"
        android:background="@drawable/shape1"


        android:onClick="contact"
        android:paddingBottom="12dp"
        />
    <Button

        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/contact"
        android:id="@+id/work"
        android:layout_marginTop="16dp"
        android:paddingTop="12dp"
        android:text="How it Works"
        android:textSize="16dp"
        android:textAllCaps="false"
        android:textColor="#000"
        android:background="@drawable/shape1"


        android:onClick="work"
        android:paddingBottom="12dp"
        />

    <Button

        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/work"
        android:id="@+id/tc"
        android:layout_marginTop="16dp"
        android:paddingTop="12dp"
        android:text="Terms and Conditions"
        android:textSize="16dp"
        android:textAllCaps="false"
        android:textColor="#000"
        android:background="@drawable/shape1"


        android:onClick="tandc"
        android:paddingBottom="12dp"
        />
    <Button

        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tc"
        android:id="@+id/about"
        android:layout_marginTop="16dp"
        android:paddingTop="12dp"
        android:text="About Us"
        android:textSize="16dp"
        android:textAllCaps="false"
        android:textColor="#000"
        android:background="@drawable/shape1"


        android:onClick="about"
        android:paddingBottom="12dp"
        />
            <Button

                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tc"
                android:id="@+id/location"
                android:layout_marginTop="16dp"
                android:paddingTop="12dp"
                android:text="Change Location"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:textColor="#000"
                android:background="@drawable/shape1"


                android:onClick="location"
                android:paddingBottom="12dp"
                />
    <Button
        android:id="@+id/logoutbutton"
        android:layout_below="@+id/about"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:paddingTop="12dp"
        android:text="Log out"
        android:textColor="#fff"
        android:background="@drawable/shape"


        android:onClick="logout"
        android:paddingBottom="12dp"

        />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>


