                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:id="@+id/score6"
                        android:text="5"
                        android:textSize="14dp"
                        android:textColor="@color/gen_black"/>


                    <TextView
                        android:layout_width="wrap_content"
